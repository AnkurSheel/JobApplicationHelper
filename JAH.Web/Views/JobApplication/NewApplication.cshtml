@model JobApplication

<form asp-action="PostAsync" method="post" class="form-horizontal" role="form">
    <h4>Add new application</h4>

    <div class="form-group">
        <label asp-for="CompanyName" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="CompanyName" class="form-control"/>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="ApplicationDate" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="ApplicationDate" class="form-control"/>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Status" class="col-md-2 control-label"></label>
        <div class="col-md-5">
            <input asp-for="Status" class="form-control"/>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-5">
            <input type="submit" class="btn btn-primary" value="Add Application"/>
        </div>
    </div>
</form>